<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbar_style" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/toolbar_textPrimary_color</item>
        <item name="android:textColorSecondary">@color/toolbar_textSecondary_color</item>
        <item name="android:itemBackground">#ffffff</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Fav -->
    <style name="text_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/textSize_dimen</item>
    </style>

    <style name="titlesText_style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/titlesTextSize_dimen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="subtitlesText_style">
        <item name="android:textColor">@color/subtitlesText_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="fav_input_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="default_text">
        <item name="android:textColor">@color/subtitlesText_color</item>
        <item name="android:textSize">@dimen/textSize_dimen</item>
    </style>

    <!-- Nav -->
    <style name="nav_section_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Profil -->
    <style name="name">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="goal">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditProfil_Button">
        <item name="android:textColor">@color/subtitlesText_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Body -->
    <style name="body_value">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="default_date">
        <item name="android:textColor">@color/colorDefault_date</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="side_body">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Training -->
    <style name="training_titles">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Performance -->
    <style name="progress_titles">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="dialog_button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- About -->
    <style name="about_titles_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/titlesTextSize_dimen</item>
    </style>

    <style name="about_subtitles_style">
        <item name="android:textColor">@color/subtitlesText_color</item>
        <item name="android:textSize">@dimen/subtitlesTextSize_dimen</item>
    </style>

</resources>
